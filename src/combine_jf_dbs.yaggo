option("output", "o") {
  description "Output file"
  c_string; default "combined.jf"; typestr "prefix" }
option("verbose", "v") {
  description "Be verbose"
  flag; off }
arg("db.jf") {
  description "Input Jellyfish database"
  c_string; typestr "path"; multiple; at_least 2 }
